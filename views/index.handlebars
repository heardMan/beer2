{{!-- start carousel --}}
<div class="row my-3 mx-0 px-0 main-bg">
  <div class="col-12 mx-0 px-0">
    <div class="card rounded-0 border-0 main-bg">
      <div class="card-body p-0 my-2 main-bg">


        <div id="carouselExampleControls" class="carousel slide carousel-fade text-white" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active text-center">
              <div class="card carousel-card rounded-0 card-shadow p-3 m-3 e-blue">
                <h3>Find Bills</h3>
              </div>
            </div>
            <div class="carousel-item text-center">
              <div class="card carousel-card rounded-0 card-shadow p-3 m-3 e-blue">
                <h3>Contact Your Representative</h3>
              </div>
            </div>
            <div class="carousel-item text-center">
              <div class="card carousel-card rounded-0 card-shadow p-3 m-3 e-blue">
                <h3>Sway the Vote</h3>
              </div>
            </div>

            <div class="carousel-item ">
              <div class="row">
                <div class="col-12 text-center">
                  <div class="card carousel-card rounded-0 card-shadow p-3 m-3 e-blue">
                    <div class="row">
                      <div class="col-12">
                        <h3>Sign Up Today</h3>
                      </div>
                      <div class="col-12">
                        <a class="btn chi-red rounded-0 p-3 mt-5 register-button text-white" href="/register"
                          role="button">Register</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>


      </div>
    </div>
  </div>
</div>
{{!-- end carousel --}}
<div class="row">
  <div class="col-11 mx-auto">
    <div class="card rounded-0 card-shadow border-0">
      <div class="row mx-0 text-center text-white py-3 e-blue">
        <div class="col-12">
          <h3>Recent Bills</h3>
        </div>

      </div>



      <div class="row px-3" align="center">
        {{#each house}}
        <div class="col-12 col-sm-6 col-md-4 p-3">
          <div class="card border-0 rounded-0 bill-card m-1" style="height:100%">
            <div class="row mx-0 e-blue">
              <div class="col-12">
                <strong>
                  <p class="text-white">{{billNum}}</p>
                </strong>
              </div>
            </div>

            <div class="card rounded-0 " style="height:100%">
            <div class="col-12">
            <div class="row">
              <div class="col-12 mt-3 mb-5">
                <p>{{description}}</p>
              </div>
            </div>
            <div class="row read-bill">
              <div class="col-12">
              <p><a class="text-dark " href="{{bill_url}}">Read Bill Here</a></p>
              </div>
            </div>

            </div>
            </div>


          </div>
        </div>
        {{/each}}
      </div>


      <div class="row">
        <div class="col-12 text-center p-4">
          <a class="btn e-blue text-white rounded-0  register-button" href="/datapage" role="button">View More Bills</a>

        </div>
      </div>

    </div>
  </div>
</div>



<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>